{
  "OpenApi": {
    "DisabledEnvironments": [
      "Production"
    ],
    "SecuritySchemes": [
      {
        "HeaderName": "Client-Type",
        "Description": "Specifies the client type, e.g., '2'."
      },
      {
        "HeaderName": "Authorization",
        "Description": "Access token for the API."
      },
      {
        "HeaderName": "Refresh-Token",
        "Description": "Refresh token for renewing the access token."
      },
      {
        "HeaderName": "Device",
        "Description": "Unique device identifier, e.g., '077cc5f5-337a-46bf-a815-a2ea90ec24f2'."
      },
      {
        "HeaderName": "Device-Name",
        "Description": "Name of the device, e.g., 'iPhone 14 Pro Max'."
      },
      {
        "HeaderName": "Latitude",
        "Description": "Geographical latitude value, e.g., '42.231'."
      },
      {
        "HeaderName": "Longitude",
        "Description": "Geographical longitude value, e.g., '43.231'."
      },
      {
        "HeaderName": "Accuracy",
        "Description": "Location accuracy in meters, e.g., '29.2'."
      },
      {
        "HeaderName": "Accept-Language",
        "Description": "Language preference, e.g., 'en-US'."
      }
    ],
    "Documents": [
      {
